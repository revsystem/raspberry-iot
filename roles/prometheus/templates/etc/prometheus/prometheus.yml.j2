global:
  scrape_interval:     1m
  evaluation_interval: 1m


# Alertmanager configuration
alerting:
  alertmanagers:
  - static_configs:
    - targets: ['{{ prometheus_hostname }}:9093']

scrape_configs:
  - job_name: 'prometheus'

    static_configs:
      - targets: ['{{ prometheus_hostname }}:9090']

  - job_name: node
    static_configs:
      - targets: ['{{ prometheus_hostname }}:9100']
